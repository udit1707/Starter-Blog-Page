<% include partials/header%>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit
            <%=bl.title%>
        </div>
        <form class="ui form" action="/blogs/<%=bl._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="title" value="<%=bl.title%>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="image_url" value="<%=bl.image%>">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]"><%=bl.body%></textarea>

            </div>

            <input class="ui violet big inverted button" type="submit">
        </form>
    </div>
    <% include partials/footer%>